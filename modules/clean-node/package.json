{
  "name": "clean-architecture-base",
  "version": "0.0.1",
  "description": "Typescript + Clean architecture used as scaffolding",
  "main": "app.ts",
  "scripts": {
    "compile:ts": "rm -rf build/ && tsc -p .",
    "test": "jest --detectOpenHandles",
    "coverage": "jest --coverage --silent",
    "start:script": "npm run compile:ts && node build/frameworks/script/index.js",
    "start:api": "npm run compile:ts && node build/frameworks/api/index.js",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "husky:precommit": "npm run lint && npm run test"
  },
  "keywords": [
    "Typescript",
    "Clean Architecture",
    "Node"
  ],
  "author": "Danniel Hugo <dannielhugo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/express": "^4.17.8",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.13",
    "@types/joi": "^14.3.4",
    "@types/lodash": "^4.14.161",
    "@types/lokijs": "^1.5.3",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@statechannels/client-api-schema": "^0.3.4",
    "@statechannels/server-wallet": "^0.3.4",
    "@statechannels/wallet-core": "^0.3.4",
    "awilix": "^4.2.6",
    "body-parser": "^1.19.0",
    "ethers": "^5.0.9",
    "express": "^4.17.1",
    "joi": "^17.2.1",
    "lokijs": "^1.5.11",
    "ts-nats": "^1.2.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run husky:precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
