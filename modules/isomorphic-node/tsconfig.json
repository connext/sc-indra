{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "module": "commonjs",
    "noUnusedLocals": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["dist", "node_modules", "**/*spec.ts"],
  "include": [ "src/**/*.ts" ]
}
